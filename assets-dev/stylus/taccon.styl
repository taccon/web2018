color-anthracite = #090909
color-yellow = #D5D679
color-green = #79D684
color-blue = #5395D7
color-red = #D75353

@require 'webfonts/fonts.styl'

body
  font-family: 'sansationbold'
  background-color: color-anthracite

.tc-items
  width: 100%

.tc-item
  font-family: 'sansationbold_italic'
  font-size: 3rem
  max-width: 100vw
  padding: 1rem
  height: 60px
  float: left
  display: inline-block
  border: 9px solid
  margin: .8rem
  &:nth-child(1),&:nth-child(4n+5)
    color: color-yellow
    border-color: color-yellow
  &:nth-child(2),&:nth-child(4n+6)
    color: color-green
    border-color: color-green
  &:nth-child(3),&:nth-child(4n+7)
    color: color-blue
    border-color: color-blue
  &:nth-child(4),&:nth-child(4n+8)
    color: color-red
    border-color: color-red
